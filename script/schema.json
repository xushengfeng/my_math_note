{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": ["meta", "text", "books", "qa"],
	"properties": {
		"meta": {
			"type": "object"
		},
		"text": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["id", "name", "path", "base"],
				"properties": {
					"id": { "type": "string" },
					"name": { "type": "string" },
					"path": { "type": "string" },
					"base": {
						"type": "array",
						"items": { "type": "string" }
					}
				}
			}
		},
		"books": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["id", "name", "chapter"],
				"properties": {
					"id": { "type": "string" },
					"name": { "type": "string" },
					"chapter": {
						"type": "array",
						"items": {
							"type": "string"
						}
					}
				}
			}
		},
		"qa": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["id", "name", "path"],
				"properties": {
					"id": { "type": "string" },
					"name": { "type": "string" },
					"path": { "type": "string" },
					"needAnswer": { "type": "boolean" }
				}
			}
		}
	}
}
